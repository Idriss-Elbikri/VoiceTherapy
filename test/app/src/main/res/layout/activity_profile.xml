<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1E2A2A"
    android:padding="24dp">

    <!-- Menu hamburger en haut à gauche -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_menu_hamburger"
        app:tint="#FFFFFF"
        android:contentDescription="@string/menu_icon_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <!-- Logo lotus centré en haut -->
    <ImageView
        android:id="@+id/logoIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_lotus"
        app:tint="#FFFFFF"
        android:contentDescription="@string/logo_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Nom utilisateur -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/logoIcon"
        android:layout_marginTop="24dp" />

    <!-- Email utilisateur -->
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@user.com"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:layout_below="@id/userName"
        android:layout_marginTop="4dp" />

    <!-- Titre Achievements -->
    <TextView
        android:id="@+id/achievementsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACHIEVEMENTS"
        android:textColor="#B0B0B0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/userEmail"
        android:layout_marginTop="24dp" />

    <!-- Liste des achievements -->
    <LinearLayout
        android:id="@+id/achievementsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/achievementsTitle"
        android:layout_marginTop="12dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Achievement 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:backgroundTint="#7E9E94"
            android:clipToOutline="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/achievement_bg">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trophy"
                app:tint="#FFFFFF"
                android:contentDescription="@string/achievement_icon_desc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Session"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete your first meditation session."
                    android:textColor="#D0D0D0"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Achievement 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:backgroundTint="#7E9E94"
            android:clipToOutline="true"
            android:background="@drawable/achievement_bg">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trophy"
                app:tint="#FFFFFF"
                android:contentDescription="@string/achievement_icon_desc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Practice"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="do exercises for 3 consecutive days."
                    android:textColor="#D0D0D0"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Achievement 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:backgroundTint="#7E9E94"
            android:clipToOutline="true"
            android:background="@drawable/achievement_bg">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trophy"
                app:tint="#FFFFFF"
                android:contentDescription="@string/achievement_icon_desc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consistency is Key"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exercise every day for a week."
                    android:textColor="#D0D0D0"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Achievement 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:backgroundTint="#7E9E94"
            android:clipToOutline="true"
            android:background="@drawable/achievement_bg">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trophy"
                app:tint="#FFFFFF"
                android:contentDescription="@string/achievement_icon_desc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month of Mindfulness"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ex daily for 30 consecutive days."
                    android:textColor="#D0D0D0"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Barre d'icônes en bas -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:background="#1E2A2A">

        <ImageButton
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_spiral"
            app:tint="#FFFFFF"
            android:background="@android:color/transparent"
            android:contentDescription="@string/home_icon_desc" />

        <ImageButton
            android:id="@+id/musicIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_music_note"
            app:tint="#FFFFFF"
            android:background="@android:color/transparent"
            android:contentDescription="@string/music_icon_desc" />

        <ImageButton
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_person"
            app:tint="#FFFFFF"
            android:background="@android:color/transparent"
            android:contentDescription="@string/profile_icon_desc" />
    </LinearLayout>
</RelativeLayout>
